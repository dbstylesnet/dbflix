{
  "name": "kodflix",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:3002/",
  "dependencies": {
    "axios": "^0.19.0",
    "express": "^4.17.1",
    "mongodb": "^3.5.3",
    "nodemon": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "styled-components": "^4.4.1",
    "yarn-run-all": "^3.1.1"
  },
  "scripts": {
    "start": "npm run _start-backend",
    "postinstall": "NODE_OPTIONS=--openssl-legacy-provider react-scripts build",
    "start-all": "npm-run-all -p start _start-backend",
    "start-dev2": "NODE_OPTIONS=--openssl-legacy-provider react-scripts build && npm-run-all -p react-scripts start start-backend",
    "start-dev": "npm-run-all -p start-normal _start-backend-dev",
    "start-dev-db": "npm-run-all -p _start-db _start-frontend _start-backend",
    "_start-frontend": "react-scripts start",
    "_start-backend": "node src/backend/app.js",
    "_start-backend-dev": "nodemon ./src/backend/app.js",
    "start-normal": "react-scripts start",
    "build": "NODE_OPTIONS=--openssl-legacy-provider react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
